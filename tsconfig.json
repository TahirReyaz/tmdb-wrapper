{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES6",
    "sourceMap": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "skipLibCheck": true
    // "paths": {
    //   "*": ["*"]
    // }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
